<Window x:Class="WpfApp10.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Students and Assigned Courses" Height="450" Width="800">
    <Grid>
        <!-- Label for Students ComboBox -->
        <Label Content="Select Student:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" />

        <!-- ComboBox to Select Students -->
        <ComboBox x:Name="StudentsComboBox" 
                  HorizontalAlignment="Left" Margin="100,10,0,0" 
                  VerticalAlignment="Top" Width="200"
                  SelectionChanged="StudentsComboBox_SelectionChanged" >
            <CheckBox/>
            <ComboBoxItem/>
            <ComboBoxItem/>
            <ComboBoxItem/>
            <ComboBoxItem/>
        </ComboBox>

        <!-- DataGrid to Display Assigned Courses -->
        <DataGrid x:Name="CoursesDataGrid" 
                  AutoGenerateColumns="True" 
                  HorizontalAlignment="Stretch" 
                  VerticalAlignment="Stretch" 
                  Margin="10,50,10,10" />
    </Grid>
</Window>
     
